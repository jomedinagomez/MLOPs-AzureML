# Base prefix for all resources
prefix = "aml"

# Specific prefixes for each resource type (aligned with deployment strategy)
resource_prefixes = {
  vnet               = "vnet-aml"
  subnet             = "subnet-aml"
  workspace          = "amlws"
  registry           = "amlreg"
  storage            = "amlst"
  container_registry = "amlacr"
  key_vault          = "amlkv"
  log_analytics      = "amllog"
}

# Environment Configuration
purpose       = "dev"
location      = "canadacentral"
location_code = "cc"
random_string = "01"

# Development Network Configuration
vnet_address_space    = "10.1.0.0/16"
subnet_address_prefix = "10.1.1.0/24"

# Resource Tagging
tags = {
  environment  = "dev"
  project      = "ml-platform"
  created_by   = "terraform"
  owner        = "ml-team"
  purpose      = "development"
}

# Key Vault Configuration
enable_auto_purge = true

# Cross-environment configuration (commented out by default)
# Uncomment and configure when setting up cross-environment asset promotion
# enable_cross_env_rbac = true
